<div class="content">

  <div class="ui vertical accordion menu fluid">

    <% @models.each do |model| %>
    <div class="item">
      <a class="title">
        <i class="dropdown icon"></i>
        <i class="table icon"></i>
        <strong><%= model.name %></strong>
      </a>
      <div class="content">
        <div class="ui form">
          <div class="grouped fields">

            <%= model.inspect %>

          </div>
        </div>
      </div>
    </div>
    <% end %>
  </div>

</div>
